<h2>スケジュール編集</h2>

<%= render "shared/error", obj: @schedule %>

<%= form_for @schedule do |f|%>
<table>
  <tr>
    <th><%= f.label :title, "タイトル" %></th>
    <td><%= f.text_field :title, class: "title" %></td>
  </tr>
  <tr>
    <th><%= f.label :start_date, "開始日" %></th>
    <td><%= f.date_field :start_date, class: "start_date" %></td>
  </tr>
  <tr>
    <th><%= f.label :end_date, "終了日" %></th>
    <td><%= f.date_field :end_date, class: "end_date" %></td>
  </tr>
  <tr>
    <th><%= f.label :all_day, "終日" %></th>
    <td><%= f.check_box :all_day, class: "all_day_checkbox" %></td>
  </tr>
  <tr>
    <th><%= f.label :memo, "スケジュールメモ" %></th>
    <td><%= f.text_area :memo, class: "schedule_memo" %></td>
  </tr>
</table>
<ul>
  <li><%= f.submit "更新", class: "submit_button"%></li>
  <li><%= link_to "スケジュール一覧へ戻る", :schedules %></li>
</ul>
<% end %>