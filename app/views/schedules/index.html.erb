<h2>スケジュール一覧</h2>

<% if flash.notice %>
  <p class = "notice"><%= flash.notice %></p>
<% end %>

<table>
  <tr>
    <th>ID</th>
    <th>タイトル</th>
    <th>開始日</th>
    <th>終了日</th>
    <th>終日</th>
    <th>スケジュール更新日時</th>
    <th>確認</th>
    <th>編集</th>
    <th>削除</th>
  </tr>

  <% @schedules.each do |schedule|%>
  <tr>
    <td><%= schedule.id %></td>
    <td><%= schedule.title %></td>
    <td><%= l schedule.start_date %></td>
    <td><%= l schedule.end_date %></td>
    <td><%= render "shared/all_day", obj: schedule %></td>
    <td><%= l schedule.updated_at %></td>
    <td>
      <%= link_to "確認", schedule %>
    </td>
    <td>
      <%= link_to "編集", [:edit, schedule] %>
    </td>
    <td>
      <%= link_to "削除", schedule, method: :delete, data:{ confirm: "削除しますか？"} %>
    </td>
  </tr>
  <% end %>
</table>

<p><%= link_to "スケジュール新規登録", :new_schedule %></p>
